<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenu"
        android:background="#079A3D"
        tools:ignore="MissingClass">

        <TextView
            android:id="@+id/nameGame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:scaleType="centerCrop"
            android:text="SNOOKER STATS"
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/newGame"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="serif"
            android:text="Новая игра"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameGame"
            app:layout_constraintWidth_default="wrap"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/historyMatch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="Статистика игр"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textStyle="bold"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newGame"
            app:layout_constraintWidth_default="wrap"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/paramsTable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="Разметка стола"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textStyle="bold"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/historyMatch"
            app:layout_constraintWidth_default="wrap"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp" />



        <ImageView
            android:layout_width="450dp"
            android:layout_height="280dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="590dp"
            android:scaleType="fitEnd"
            android:src="@drawable/menuballs2"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>